# Calloway Pharmacy IMS - Environment Configuration
# Copy this file to .env and update with your production values
# DO NOT commit .env to version control!

# Environment: development or production
ENVIRONMENT=production

# Database Configuration (get these from your hosting provider)
DB_HOST=your_database_host
DB_USER=your_database_username
DB_PASS=your_database_password
DB_NAME=your_database_name

# Site Settings
SITE_NAME=Calloway Pharmacy
SITE_URL=https://yourdomain.com/
BASE_URL=/

# Timezone
TIMEZONE=Asia/Manila

# Debug Mode (set to false in production)
DEBUG_MODE=false

# PayMongo API Keys (for online payments)
# Get these from https://dashboard.paymongo.com
PAYMONGO_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx
PAYMONGO_SECRET_KEY=sk_live_xxxxxxxxxxxxx

# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
