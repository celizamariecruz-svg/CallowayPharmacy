# ============================================
# Calloway Pharmacy IMS - Apache Security
# ============================================

# Enable RewriteEngine
<IfModule mod_rewrite.c>
    RewriteEngine On
    # RewriteBase is automatically handled - works in any directory
    # For subdirectory: RewriteBase /CallowayPharmacyIMS/
    # For root domain: RewriteBase /
</IfModule>

# ============================================
# FORCE HTTPS (Uncomment for production!)
# ============================================
# <IfModule mod_rewrite.c>
#     RewriteCond %{HTTPS} off
#     RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# </IfModule>

# ============================================
# 1. SECURITY HEADERS
# ============================================

<IfModule mod_headers.c>
    # Prevent clickjacking attacks
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy (adjust as needed)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; img-src 'self' data: https:; font-src 'self' https://cdnjs.cloudflare.com;"
    
    # Remove server signature
    Header always unset X-Powered-By
    Header always unset Server
</IfModule>

# ============================================
# 2. PREVENT DIRECTORY LISTING
# ============================================
Options -Indexes

# ============================================
# 3. PROTECT SENSITIVE FILES
# ============================================

# Block access to hidden files (starting with .)
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Block access to backup files
<FilesMatch "\.(backup|bak|old|~|swp|log|txt)$">
    Require all denied
</FilesMatch>

# Block access to configuration files
<FilesMatch "^(composer\.json|composer\.lock|\.htaccess|\.htpasswd|config\.php)$">
    Require all denied
</FilesMatch>

# Block access to SQL files
<FilesMatch "\.sql$">
    Require all denied
</FilesMatch>

# Block access to README and documentation (except allowed ones)
<FilesMatch "^(README|CHANGELOG|LICENSE|CONTRIBUTING)">
    Require all denied
</FilesMatch>

# ============================================
# 4. PROTECT PHP FILES FROM DIRECT ACCESS
# ============================================

# Block debug and test files
<FilesMatch "^(test_|debug_|check_|verify_|phpinfo).*\.php$">
    Require all denied
</FilesMatch>

# Block setup files after installation
<FilesMatch "^(setup_|create_|install_|init_|import_|add_initial).*\.php$">
    Require all denied
</FilesMatch>

# Protect core files from direct access
<FilesMatch "^(db_connection|Auth|email_service|render_employee_table)\.php$">
    Require all denied
</FilesMatch>

# Protect API files - only allow POST requests
<FilesMatch "_api\.php$">
    <LimitExcept POST GET>
        Require all denied
    </LimitExcept>
</FilesMatch>

# ============================================
# 5. PREVENT ACCESS TO SENSITIVE DIRECTORIES
# ============================================

# If you have these directories, protect them
<IfModule mod_rewrite.c>
    RewriteRule ^backups/ - [F,L]
    RewriteRule ^logs/ - [F,L]
    RewriteRule ^temp/ - [F,L]
    RewriteRule ^cache/ - [F,L]
</IfModule>

# ============================================
# 6. MITIGATE SQL INJECTION ATTEMPTS
# ============================================

<IfModule mod_rewrite.c>
    # Block common SQL injection patterns in URLs
    RewriteCond %{QUERY_STRING} (union.*select|insert.*into|delete.*from|drop.*table|update.*set) [NC]
    RewriteRule .* - [F,L]
    
    # Block base64 encoded strings
    RewriteCond %{QUERY_STRING} base64_encode.*\(.*\) [NC,OR]
    RewriteCond %{QUERY_STRING} base64_(en|de)code.*\(.*\) [NC]
    RewriteRule .* - [F,L]
    
    # Block script tags
    RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC]
    RewriteRule .* - [F,L]
    
    # Block PHP global variables
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
    RewriteRule .* - [F,L]
</IfModule>

# ============================================
# 7. PREVENT FILE UPLOAD EXPLOITS
# ============================================

# Block execution of uploaded files
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|htm|shtml|sh|cgi)$">
    <If "%{REQUEST_URI} =~ m#^/uploads/#">
        Require all denied
    </If>
</FilesMatch>

# ============================================
# 8. LIMIT REQUEST METHODS
# ============================================

<LimitExcept GET POST HEAD>
    Require all denied
</LimitExcept>

# ============================================
# 9. MITIGATE BRUTE FORCE ATTACKS
# ============================================

# Note: This is basic protection. For production, use fail2ban or similar
<IfModule mod_evasive.c>
    DOSHashTableSize 3097
    DOSPageCount 10
    DOSSiteCount 100
    DOSPageInterval 1
    DOSSiteInterval 1
    DOSBlockingPeriod 60
</IfModule>

# ============================================
# 10. COMPRESSION & PERFORMANCE
# ============================================

<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML, JSON
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# ============================================
# 11. BROWSER CACHING
# ============================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    
    # HTML (short cache)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ============================================
# 12. PREVENT HOTLINKING (Optional)
# ============================================

<IfModule mod_rewrite.c>
    # Prevent image hotlinking from other domains
    # RewriteCond %{HTTP_REFERER} !^$
    # RewriteCond %{HTTP_REFERER} !^https?://(www\.)?yourdomain\.com [NC]
    # RewriteRule \.(jpg|jpeg|png|gif)$ - [F]
</IfModule>

# ============================================
# 13. CUSTOM ERROR PAGES (Optional)
# ============================================

# ErrorDocument 400 /error_400.html
# ErrorDocument 401 /error_401.html
# ErrorDocument 403 /error_403.html
# ErrorDocument 404 /error_404.html
# ErrorDocument 500 /error_500.html

# ============================================
# 14. PHP SETTINGS (If allowed by host)
# ============================================

<IfModule mod_php7.c>
    # Disable dangerous PHP functions
    php_value disable_functions "exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source"
    
    # Hide PHP version
    php_flag expose_php off
    
    # Session security
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 0
    php_value session.use_only_cookies 1
    php_value session.cookie_samesite "Strict"
    
    # Upload limits
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 60
    php_value max_input_time 60
    
    # Error handling (production)
    php_flag display_errors off
    php_flag display_startup_errors off
    php_value error_reporting E_ALL
    php_value log_errors on
    # php_value error_log /path/to/error.log
</IfModule>

# ============================================
# END OF SECURITY CONFIGURATION
# ============================================

# Allow access to main pages
<FilesMatch "^(index|login|dashboard|pos|inventory_management|supplier_management|purchase_orders|medicine-locator|expiry-monitoring|employee-management|user_management|online_ordering|loyalty_qr|reports|settings_enhanced|logout|login_handler|process_sale|receipt_generator|get_csrf_token)\.">
    Require all granted
</FilesMatch>

# Allow access to assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)$">
    Require all granted
</FilesMatch>
